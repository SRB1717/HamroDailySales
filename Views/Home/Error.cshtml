@model HamroDailySales.Controllers.ErrorViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Error - HamroDailySales</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2>Error</h2>
        <div class="alert alert-danger">
            An error occurred while processing your request.
            @if (Model.ShowRequestId)
            {
                <p><strong>Request ID:</strong> @Model.RequestId</p>
            }
        </div>
        <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Return to Home</a>
    </div>
</body>
</html>